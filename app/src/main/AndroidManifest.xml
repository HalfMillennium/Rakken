<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coincalc.anduril.rakon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewStories"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_view_stories" />
        <activity android:name=".StoryEntries"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignUpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".NewEntry"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignInActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateNew"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DetailsPopup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.CustomPopup"></activity>
        <activity android:name=".ForgotPassword"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>